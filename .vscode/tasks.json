{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "./src/main.cpp",
                "./src/drone.cpp",
                "./src/vec2.cpp",
                "./src/comms.cpp",
                "./src/in_out.cpp",
                "./src/obstacles.cpp",
                "-lm",
                "-o./build/vocabs2.exe",
                "-w",
                "-march=native",
                "-Wextra",
                "-Wfatal-errors",
                "-Wall",
                //"-g",
                //"-pg",
                "-O3",
                "-finline-functions",
                "-fopenmp",
                
            ],
            "group": "build"
        },

        {
            "label": "build clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "./src/main.cpp",
                "./src/drone.cpp",
                "./src/vec2.cpp",
                "./src/comms.cpp",
                "./src/in_out.cpp", 
                "./src/obstacles.cpp",
                "-o./build/vocabs2.exe",
                "-Wextra",
                "-Wfatal-errors",
                "-Wall",
                "-march=native",
                "-O3",
                "-finline-functions",
                "-fopenmp",
                "-std=c++20"
            ],
            "group": "build"
        }
    ]
}