{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "drone.cpp",
                "vec2.cpp",
                "comms.cpp",
                "in_out.cpp",
                "-lm",
                "-o./build/vocabs2",
                "-w",
                "-march=native",
                "-Wextra",
                "-Wfatal-errors",
                "-Wall",
               // "-g",
                //"-pg",
                "-O3",
                "-finline-functions",
                "-fopenmp",
                "-std=c++20"
            ],
            "group": "build"
        },

        {
            "label": "build clang",
            "type": "shell",
            "command": "clang++",
            "args": [
                "main.cpp",
                "drone.cpp",
                "vec2.cpp",
                "comms.cpp",
                "in_out.cpp", 
                "-o./build/vocabs2.exe",
                "-Wextra",
                "-Wfatal-errors",
                "-Wall",
                "-march=native",
                "-O3",
                "-finline-functions",
                "-fopenmp",
                "-std=c++20"
            ],
            "group": "build"
        }
    ]
}