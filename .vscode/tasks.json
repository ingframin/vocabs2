{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "drone.c",
                "vec2.c",
                "video.c",
                "channel.c",
                "-lm",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-o./build/vocabs2",
                "-std=c11",
                "-w",
                "-Wextra",
                "-Wfatal-errors",
                "-Wall",
                "-g"
            ],
            "group": "build"
            
        },
        {
            "label": "build win",
            "type": "shell",
            "command":"gcc",
            "args": [
                "main.c",
                "drone.c",
                "vec2.c",
                "video.c",
                "channel.c",
                "-o./build/vocabs2.exe",
                "-Wall",
                "-std=c11",
                "-L./lib",
                "-lm",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
 //               "-I./SDL2",
                "-Wall",
                "-Wextra",
                "-Wfatal-errors",
                "-g"
            ]
        }
    ]
}