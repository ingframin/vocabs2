{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "drone.c",
                "vec2.c",
                "comms.c",
                "-lm",
                "-o./build/vocabs2",
                "-std=c11",
                "-w",
                "-Wextra",
                "-Wfatal-errors",
                "-Wall",
                "-g",
                //"-pg",
                "-O3",
                "-finline-functions",
                "-fopenmp"
            ],
            "group": "build"
        },
        {
            "label": "build win",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "drone.c",
                "vec2.c",
                "comms.c",
                "-o./build/vocabs2.exe",
                "-Wall",
                "-std=c11",
                "-L./lib",
                "-lm",
                "-lmingw32",
                "-Wall",
                "-Wextra",
                "-Wfatal-errors",
                "-g",
                "-O3",
                "-finline-functions",
                "-fopenmp",
                // "-pg"
            ],
            "group": "build"
        }
    ]
}