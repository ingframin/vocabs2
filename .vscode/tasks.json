{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build linux",
            "type": "shell",
            "command": "gcc",
            "args": [
                "./src/main.c",
                "./src/drone.c",
                "./src/vec2.c",
                "./src/comms.c",
                "./src/obstacle.c",
                "-lm",
                "-o./build/vocabs2",
                "-std=c11",
                "-w",
                "-march=native",
                "-Wextra",
                "-Wfatal-errors",
                "-Wall",
                "-O3",
                "-finline-functions",
                "-fopenmp"
            ],
            "group": "build"
        }, 
        {
            "label": "build windows",
            "type": "shell",
            "command": "clang",
            "args": [
                "./src/main.c",
                "./src/drone.c",
                "./src/vec2.c",
                "./src/comms.c",
                "./src/obstacle.c",
                "-o./build/vocabs2.exe",
                "-Wall",
                "-std=c11",
                "-march=native",
                "-Wall",
                "-Wextra",
                "-Wfatal-errors",
                "-O3",
                "-finline-functions",
                "-fopenmp"
            ],
            "group": "build"
        }
    ]
}